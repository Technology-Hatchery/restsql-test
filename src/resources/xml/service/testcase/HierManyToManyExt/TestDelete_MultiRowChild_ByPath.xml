	<step name="verify">
		<request method="GET" uri="res/HierManyToManyExt?last_name=_Black" />
		<response>
			<body>
<![CDATA[
<readResponse>
	<actor last_name="_Black" first_name="John" actor_id="1000" actor_genre_id="1" name="HORROR">
