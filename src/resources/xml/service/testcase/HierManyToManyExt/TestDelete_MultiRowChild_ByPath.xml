	<step name="execute">
		<request method="DELETE" uri="res/HierManyToManyExt/1000" >
			<body>
<![CDATA[
<request>
	<film film_id="5000" />
	<film film_id="5002" />
</request>
]]>
			</body>
		</request>
		<response>
			<body>
<![CDATA[
<writeResponse rowsAffected="2" />
]]>
				</body>
		</response>
